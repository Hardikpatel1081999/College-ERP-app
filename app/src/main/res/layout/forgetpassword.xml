<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    android:orientation="vertical"
    android:background="@drawable/c"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/forgetpassword"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:fontFamily="@font/thin"
        android:textColor="#303561"
        android:textSize="40dp"
        android:text="ForgotPassword" />

    <TextView
        android:layout_width="312dp"
        android:layout_height="67dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/thin"
        android:gravity="center"
        android:text="Enter the email address\n to Recover your password"
        android:textSize="19dp" />

    <EditText
        android:id="@+id/etfemail"
        android:layout_width="354dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/inputbackground"
        android:ems="10"
        android:fontFamily="@font/thin"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:text="" />

</LinearLayout>