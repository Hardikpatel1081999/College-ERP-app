<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="375dp"
    android:background="@drawable/c"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/notcename"
        android:layout_width="301dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"

        android:ems="10"
        android:hint=" Please enter the notice Title...."
        android:inputType="textPersonName"
        android:paddingLeft="20dp" />

    <Spinner
        android:id="@+id/noticetype"
        android:layout_width="274dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp" />

    <Button
        android:id="@+id/selectnotice"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/c"
        android:fontFamily="@font/josefinsanslight"
        android:text="Select File"
        android:textColor="#000000" />

    <Button
        android:id="@+id/noticeupload"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/c"
        android:fontFamily="@font/josefinsanslight"
        android:text="Upload File"
        android:textSize="15dp" />
</LinearLayout>