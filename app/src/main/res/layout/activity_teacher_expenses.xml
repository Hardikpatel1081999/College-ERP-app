<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context=".teacher_expenses">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="9000dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="380dp"
            android:layout_height="35dp"
            android:fontFamily="@font/light"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Expense"
            android:textColor="@android:color/darker_gray"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.025" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etsrno"
                android:layout_width="379dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:fontFamily="@font/thin"
                android:hint="Sr No."
                android:inputType="number"
                android:paddingLeft="20dp"
                android:textSize="26dp" />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etamount"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:fontFamily="@font/thin"
            android:hint="Amount"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:textSize="26dp" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            app:srcCompat="@drawable/rupee" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/etdate"
                android:layout_width="314dp"
                android:layout_height="47dp"
                android:layout_margin="10dp"
                android:ems="10"
                android:fontFamily="@font/thin"
                android:paddingLeft="10dp"
                android:hint="*Please get the current date*"
                android:paddingTop="10dp"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/isdate"
                android:layout_width="49dp"
                android:layout_height="42dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:src="@drawable/date" />
        </LinearLayout>

        <Spinner
            android:id="@+id/etpaymode"
            android:layout_width="383dp"
            android:layout_height="53dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/thin"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/etdiscript"
            android:layout_width="389dp"
            android:layout_height="56dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/thin"
            android:hint="Discription"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.693"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.387" />

        <ImageView
            android:id="@+id/ivproof"
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:layout_margin="20dp"
            android:background="@drawable/reciptimg1"
            android:padding="30dp" />
        <TextView
            android:id="@+id/alert"
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:visibility="gone"
            android:gravity="center"
            android:fontFamily="@font/thin"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="Its Mandatory to Upload Image of physical \n Bill / Invoice  of an transaction."
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15dp" />
        <Button
            android:id="@+id/btnsubmitbill"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="#e6e6ff"
            android:fontFamily="@font/light"
            android:text="Submit"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
             />
        <Button
            android:id="@+id/btnvieww"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="#e6e6ff"
            android:fontFamily="@font/light"
            android:text="View all submited"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
</ScrollView>