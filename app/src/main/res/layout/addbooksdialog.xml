<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="370dp"
    android:layout_height="wrap_content"
    android:background="@drawable/c"
    android:orientation="vertical">


    <AutoCompleteTextView
        android:id="@+id/bteachername"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/thin"
        android:hint=" Teacher Name"
        />

    <Spinner
        android:id="@+id/bbranch"
        android:layout_width="310dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <Spinner
            android:id="@+id/byear"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            />

        <EditText
            android:id="@+id/bdiv"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:fontFamily="@font/thin"
            android:hint="Div"
            android:inputType="textPersonName"
            android:paddingLeft="20dp" />
    </LinearLayout>
    <EditText
        android:id="@+id/bookname"
        android:layout_width="301dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/thin"
        android:hint=" Please enter the Book Subject ...."
        android:inputType="textPersonName"
        android:paddingLeft="20dp" />
    <EditText
        android:id="@+id/booktopic"
        android:layout_width="301dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/thin"
        android:hint=" Please enter the Book Topic ...."
        android:inputType="textPersonName"
        android:paddingLeft="20dp" />

    <Button
        android:id="@+id/bselectbook"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/c"
        android:fontFamily="@font/josefinsanslight"
        android:text="Select Book Pdf"
        android:textColor="#000000" />

    <Button
        android:id="@+id/buploadbook"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/c"
        android:fontFamily="@font/josefinsanslight"
        android:text="Upload Book pdf"
        android:textSize="15dp" />
</LinearLayout>